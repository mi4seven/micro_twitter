<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        
      <h2 class="title is-2">Edit Profile</h2>
      <%= simple_form_for(@user_profile, html: {multipart: true}) do |f| %>
        <%= f.error_notification %>

          <div class="field">
            <div class="control">

              <% if @user_profile.image.exists? %>
                  <%= image_tag @user_profile.image.url %><br/>
              <% end %>

              <%= f.file_field :image %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :name, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :username, required: true,  input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
   
        <%= f.button :submit, "Update", class:"button is-info" %>
     
      <% end %>
   
      </div>
    </div>
  </div>
</section>
