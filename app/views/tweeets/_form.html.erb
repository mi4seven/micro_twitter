
  <div class="content">
    <div class="control">   
    <%= simple_form_for(@tweeet) do |f| %>
       <%= f.error_notification %> 
          <article class="media box">
          <figure class="media-left">
            <p class="image is-64x64">
              <% if Rails.env.production? %>
                <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.user_profile.name) %>
              <% else %>                              
                <% if (current_user.user_profile.image.attached?) %>            
                  <%= image_tag current_user.user_profile.image %>
                <% end %>                 
              <% end %>  
            </p>
          </figure>
          
          <div class="media-content">
            <div class="content">
                <div class="field">
                  <div class="control">
                    <%= f.input :tweeet, label: "Tweeet about it", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new tweeet...", autofocus: true %>
                  </div>
                </div>			
            </div>                            
          </div>
        </article>
 
        <%= f.button :submit, class: "button is-info" %>
        <%= link_to 'Cancel', tweeets_path, class: "button is-info" %>
      <% end %>
    </div>                 
  </div>  









