<div class="column">
	<nav class="panel">
		<p class="panel-heading">Who to Follow</p>

        <% current_user.who_to_follow(current_user.id).each do | user | %>				
            <%= simple_form_for(user) do |f| %> 
                <div class="panel-block is-active">
                    <article class="media">					
                        <div class="media-left">
                            <figure class="image is-32x32">
                                <% if Rails.env.production? %>
                                    <%= gravatar_image_tag(user.email, size: 64, alt: user.user_profile.name) %>
                                <% else %>                              
                                    <% if (user.user_profile.image.attached?) %>            
                                        <%= image_tag user.user_profile.image %>  
                                    <% end %>                     
                                <% end %>
                            </figure>
                        </div>
                    </article>

                    <strong><%= user.user_profile.name %></strong>	
                                                            
                    <div class="media-right">								
						<%= f.button :submit, "Follow", class: "button is-small is-info is-outlined is-rounded" %> 
                    </div>						
                </div>
            <% end %>  
        <% end %>
	</nav>
</div>



