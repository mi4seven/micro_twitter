<div  class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4"> 

        <h2 class="title is-2">Log in</h2>      

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">

          <div class="field">
            <div class="control">
              <%= f.input :email, input_html: { class: "input", autocomplete: "email"}, wrapper: false, lable_html: {class: "label"} %>
            </div>     
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password, input_html: { class: "input", autocomplete: "current-password" }, wrapper: false, lable_html: {class: "label"}, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            </div>     
          </div>   

          <div class="field">
            <div class="control">
              <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
            </div>     
          </div> 

          <div class="field">
            <div class="control">
              <%= f.button :submit, "Log in", class: "button is-info is-medium" %>
            </div>     
          </div> 

        <% end %>

        <%= render "devise/shared/links" %>
      </div>        
    </div>
  </div>
</div>